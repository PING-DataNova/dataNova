# =============================================================================
# CONFIGURATION AGENT 1 - VEILLE RÉGLEMENTAIRE
# =============================================================================

# -----------------------------------------------------------------------------
# API Keys
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DATABASE_URL=sqlite:///./data/datanova.db
# Pour PostgreSQL: postgresql://user:password@localhost:5432/datanova

# -----------------------------------------------------------------------------
# Email Notifications
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-password

# IMPORTANT: Format JSON pour les listes
ALERT_RECIPIENTS=["compliance@example.com", "legal@example.com"]

# -----------------------------------------------------------------------------
# Scheduling
# -----------------------------------------------------------------------------
SCHEDULER_ENABLED=true
CRON_SCHEDULE="0 8 * * 1"  # Chaque lundi à 8h (format cron)

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=logs/agent.log

# -----------------------------------------------------------------------------
# Sources (Pilot - CBAM)
# -----------------------------------------------------------------------------
CBAM_SOURCE_URL=https://taxation-customs.ec.europa.eu/carbon-border-adjustment-mechanism/cbam-legislation-and-guidance_en

# -----------------------------------------------------------------------------
# Company Profile
# -----------------------------------------------------------------------------
DEFAULT_COMPANY_PROFILE=aerorubber_industries
# Profil unique: AeroRubber Industries

